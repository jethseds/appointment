@{
    Layout = "_Layout";
}

<link rel="stylesheet" href="https://cdn.datatables.net/2.2.1/css/dataTables.bootstrap5.css" />
<div class="wrapper">
    <div class="sidebar">
        <ul class="nav flex-column">
            <li class="nav-item mt-5 mb-5 text-center">
                <a class="nav-link text-secondary fw-semibold" href="#">
                    <img src="/images/logo.png" width="100px">
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-secondary fw-semibold" href="/Admin/Employees"><i class="fas fa-users"></i> Employees</a>
                <a class="nav-link text-secondary fw-semibold" href="/Admin/DentistSchedule"><i class="fas fa-calendar"></i> Dentist Schedule</a>
                <a class="nav-link text-secondary fw-semibold" href="/Admin/PatientSchedule"><i class="fas fa-calendar"></i> Patient Schedule</a>
                <a class="nav-link text-secondary fw-semibold" href="/Admin/Services"><i class="fas fa-cog"></i> Services</a>
            </li>
        </ul>

        <!-- Logout at the bottom -->
        <ul class="nav flex-column mt-auto">
            <li class="nav-item">
                <a class="nav-link text-secondary fw-semibold" href="@Url.Action("Logout", "Account")"><i class="fas fa-sign-out"></i> Logout</a>
            </li>
        </ul>
    </div>

    <div class="container-fluid bg-light" style="height: 100vh;">
        @{
            var patientscheduleList = ViewData["PatientScheduleList"] as List<Appointment.Models.PatientScheduleModel>;
        }
    
        <table id="example" class="table table-bordered">
            <thead>
                <tr>
                    <th>Client Name</th>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (patientscheduleList != null && patientscheduleList.Any())
                {
                    foreach (var patientschedule in patientscheduleList)
                    {


                        <tr>
                            <td>@patientschedule.FirstName @patientschedule.LastName</td>
                            <td>
                                @DateTime.Parse(patientschedule.DateAvailable).ToString("MMMM d, yyyy")
                            </td>
                            <td>@patientschedule.AppointmentTime</td>
                            <td>
                                @if (@patientschedule.Status == "Pending")
                                {
                                    <span class="badge bg-success">@patientschedule.Status</span>
                                }
                                else if (@patientschedule.Status == "Approved")
                                {
                                    <span class="badge bg-primary">@patientschedule.Status</span>
                                }
                                else if (@patientschedule.Status == "Declined")
                                {
                                    <span class="badge bg-danger">@patientschedule.Status</span>
                                }
                                else if (@patientschedule.Status == "Completed")
                                {
                                    <span class="badge bg-warning">@patientschedule.Status</span>
                                }
                                
                                
                            </td>
                            <td>
                                <a href="javascript:void(0);" class="btn btn-success btn-sm editBtn" data-id="@patientschedule.Id">Change Status</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3">No data available.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div class="modal" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editModalLabel">Confirm Change Status</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-action="PatientSchedule" method="POST">
            <div class="modal-body">
               
                    <input type="hidden" name="patient_schedule_id" id="patient_schedule_id" />
                    <div class="form-group has-feedback form-control" style="height: 45px;position: relative;">
                        <select name="status" id="Status" style="width: 100%;height: 100%;border: unset;box-shadow: none;outline-style: none;" required>
                            <option value="Approved">Approved</option>
                            <option value="Declined">Declined</option>
                            <option value="Completed">Completed</option>
                        </select>
                    </div>
               
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="submit" class="btn btn-success" id="confirmEdit" name="save">Save</button>
            </div>
             </form>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.7.1.js"></script>
<script src="https://cdn.datatables.net/2.2.1/js/dataTables.js"></script>
<script src="https://cdn.datatables.net/2.2.1/js/dataTables.bootstrap5.js"></script>
<script>
     new DataTable('#example');


        $(document).ready(function () {
        var itemId; // Variable to store the item ID for deletion

        // When the Delete button is clicked, open the modal and set the item ID
        $('.editBtn').click(function (e) {
            e.preventDefault(); // Prevent default action (if any)

            // Get the item ID from the data-id attribute
            itemId = $(this).data('id');
            $('#patient_schedule_id').val(itemId)
            // Open the modal
            $('#editModal').modal('show');
        });

        // When the Confirm Delete button is clicked, perform the delete action
        $('#confirmDelete').click(function () {
            // Perform the delete operation (e.g., an AJAX request to delete from the database)
              $.ajax({
        url: '/Admin/DeleteDentistSchedule/' + itemId,
        type: 'DELETE',
        success: function (response) {
            $('#editModal').modal('hide');
            alert(response); // This could be a success message from the server

        },
        error: function (xhr, status, error) {
            console.error('Error editing dentist schedule:', error);
            alert('Error editing employee: ' + xhr.responseText); // Log the server response message
        }
    });
    location.reload();

        });

        // Close the modal when the Cancel button is clicked
        $('.btn-secondary').click(function () {
            $('#editModal').modal('hide');
        });
    });

</script>